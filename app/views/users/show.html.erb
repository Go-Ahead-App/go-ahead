<%= image_tag "patterns/001.png", alt: "pattern", class: "absolute -left-96 top-0" %>
<%= image_tag "patterns/001.png", alt: "pattern", class: "absolute -right-96 bottom-0" %>

<section class="flex flex-col md:space-x-8 md:flex-row">
  <%= render partial: "users/shared/sidebar" %>

  <div class="xl:w-2/4 z-10">
    <h1 class="font-display xl:text-7xl mb-4 md:mb-8"><%= "#{@user.name}, Welcome Back!" %></h1>

    <div class="flex items-center mb-4 md:mb-12">
      <div class="rounded-full w-16 h-16 md:w-24 md:h-24 aspect-square bg-neutral-200"></div>

      <div class="ml-4">
        <h2 class="text-sm text-neutral-600"><%= "@#{@user.username}" %></h2>
        <h1 class="text-xl font-medium text-neutral-900"><%= @user.name %></h1>
        <p class="text-xs text-neutral-700"><%= @user.email %></p>
      </div>
    </div>

    <p class="mt-4 text-xl leading-7"><%= @user.bio %></p>
  </div>

  <div class="xl:w-1/4 mt-8 md:mt-0 z-10">
    <div class="flex items-center space-x-4 p-4 rounded-md border border-neutral-900">
      <i class="ph ph-trophy-light text-3xl"></i>

      <div>
        <h6 class="font-medium text-lg">Reminder</h6>
        <p class="text-sm text-neutral-600">You have 3 programs to review</p>
      </div>
    </div>
  </div>
</section>

<section class="flex flex-col items-center">
  <% if @date_grouped_notes.any? { |date, notes| notes.any? } %>
    <% @date_grouped_notes.each_pair do |date, notes| %>
      <% next if notes.empty? %>
      <div class="mb-12 xl:mb-16">
        <h2 class="font-display text-3xl mb-4"><%= date.to_s.humanize %></h2>

        <div class="grid gap-4 xl:gap-8 xl:grid-cols-2">
          <% notes.each do |note| %>
            <%= link_to board_note_path(note.board, note), class: "border border-neutral-400 p-6 hover:border-neutral-300 duration-150 cursor-pointer rounded-md" do%>
              <h4 class="font-medium text-lg"><%= note.title %></h4>
              <p class="text-neutral-600 mt-2"><%= note.description %></p>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center mt-32 md:w-96">
      <h5 class="text-3xl font-medium mb-4">Empty</h5>
      <p class="text-neutral-600 text-xl">You can create a note in the boards page</p>
    </div>
  <% end %>
</section>
