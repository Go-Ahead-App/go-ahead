<div class="flex justify-center">
  <section class="w-3/4">
    <div class="relative">
      <%= image_tag '1.png', alt: '', class: "rounded-md z-10 relative" %>
      <%= image_tag '1.png', alt: '', class: "absolute w-full blur-3xl scale-[1.5] top-0 z-0" %>
    </div>

    <div class="mt-4 z-10 relative">
      <div class="bg-red-50 text-red-400 border border-red-400 font-display text-xs px-2 py-1 inline-flex items-center space-x-1 rounded-md">
        <i class="ph ph-barbell-light text-base"></i>
        <span>
          <%= program.decorate.display_difficulty %>
        </span>
      </div>

      <div class="bg-blue-50 text-blue-400 border border-blue-400 font-display text-xs px-2 py-1 inline-flex items-center space-x-1 rounded-md">
        <i class="ph ph-clock-light text-base"></i>
        <span>
          <%= program.decorate.display_length %>
        </span>
      </div>
    </div>

    <h1 class="font-display text-4xl mt-64">
      <%= program.name %>
    </h1>

    <p class="text-2xl mt-6">
      <%= program.decorate.display_description %>
    </p>

    <% if program.challenges %>
      <h2 class="font-display mt-16">
        >> Challenges
      </h2>

      <ul class="mt-4 grid grid-cols-3 gap-4">
        <% program.challenges.each do |challenge| %>
          <li class="p-4 bg-neutral-50 border border-neutral-100 rounded-md">
            <h5 class="text-xl font-medium">
              <%= challenge.name %>
            </h5>

            <p class="text-neutral-700 mt-2">
              <%= challenge.description %>
            </p>
          </li>
        <% end %>
      </ul>
    <% end %>
  </section>
</div>
